_ssh() 
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    #opts=$(grep '^Host' ~/.ssh/config ~/.ssh/config.d/* 2>/dev/null | grep -v '[?*]' | cut -d ' ' -f 2-)
    opts=$(grep -v "^#" /home/hmy/.hosts)
    opts2=$(grep -v "^#" /etc/hosts|awk '{print $2}')

    COMPREPLY=( $(compgen -W "$opts $opts2" -- ${cur}) )
    return 0
}
complete -F _ssh ssh
